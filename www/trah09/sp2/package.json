{
	"name": "app",
	"private": true,
	"scripts": {
		"contember": "docker-compose run --rm contember-cli",
		"start": "npm run start-engine && concurrently npm:start-admin npm:start-website",
		"start-engine": "docker-compose up --detach && npm run contember migrations:execute -- --yes",
		"start-admin": "vite admin --port 1480 --host 0.0.0.0",
		"start-website": "next dev website",
		"dev": "npm run check-website-env && npm start",
		"check-website-env": "test -f ./website/.env.local || cp ./website/.env.local.example ./website/.env.local",
		"generate-schema": "tsx scripts/generate-schema.ts",
		"check-admin": "tsc --project admin --noEmit",
		"check-api": "tsc --project api --noEmit",
		"check-website": "tsc --project website --noEmit",
		"check-scripts": "tsc --project scripts --noEmit",
		"check": "npm run check-admin && npm run check-api && npm run check-website && npm run check-scripts && npm run lint",
		"lint": "eslint .",
		"fix": "eslint . --fix",
		"import-database": "tsx scripts/import-database.ts",
		"build": "concurrently npm:build-admin npm:build-api npm:build-website",
		"build-admin": "tsc --project admin && vite build admin",
		"build-api": "tsc --project api",
		"build-website": "tsc --project website && next build website",
		"update-deps": "npx npm-check-updates --upgrade --interactive --format group"
	},
	"dependencies": {
		"@tanstack/react-query-devtools": "^5.4.3",
		"next": "^14.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@contember/admin": "^1.2.2",
		"@contember/admin-i18n": "^1.2.2",
		"@contember/client": "^1.2.2",
		"@contember/react-client": "^1.2.2",
		"@contember/schema": "1.3.5",
		"@contember/schema-definition": "1.3.5",
		"@mangoweb/contember-plugins": "^0.23.2",
		"@next/bundle-analyzer": "^14.0.1",
		"@sentry/nextjs": "^7.77.0",
		"@tanstack/react-query": "^5.4.3",
		"@total-typescript/ts-reset": "^0.5.1",
		"@trpc/client": "^11.0.0-alpha-next-2023-10-26-15-15-56.93",
		"@trpc/next": "^11.0.0-next.92",
		"@trpc/react-query": "^11.0.0-next.92",
		"@trpc/server": "^11.0.0-alpha-next-2023-10-26-15-15-56.93",
		"@types/inquirer": "^9.0.6",
		"@types/node": "^20.8.10",
		"@types/react": "^18.2.34",
		"@types/svg-sprite-loader": "^3.9.7",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"chalk": "^5.3.0",
		"clsx": "^2.0.0",
		"concurrently": "^8.2.2",
		"dotenv": "^16.3.1",
		"eslint": "^8.52.0",
		"eslint-config-next": "^14.0.1",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"graphql-js-tree": "^1.0.6",
		"graphql-zeus": "^5.3.2",
		"hiding-header-react": "^0.6.6",
		"inquirer": "^9.2.11",
		"nextjs-button-base": "^1.0.3",
		"nextjs-webmanifest": "^1.0.2",
		"prettier": "^3.0.3",
		"prettier-eslint": "^16.1.2",
		"react-ripple-click": "^0.2.0",
		"react-toastify": "^9.1.3",
		"react-use": "^17.4.0",
		"sass": "^1.69.5",
		"shared-loading-indicator": "^1.0.0",
		"superjson": "^2.2.0",
		"svg-sprite-loader": "^6.0.11",
		"tsx": "^3.14.0",
		"typescript": "^5.2.2",
		"vite": "^4.5",
		"zod": "^3.22.4",
		"zx": "^7.2.3"
	}
}
